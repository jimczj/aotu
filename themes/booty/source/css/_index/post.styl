.post
    max-width: 320px
    margin-left: auto
    margin-right: auto
    transition: box-shadow .2s ease-out
    cfx()
    &:hover
        box-shadow: 0 1px 2px rgba(0, 0, 0, .1)
        .post-ovl
            background: rgba(0, 0, 0, 0)
    img
        max-width: 100%
        position: relative
        z-index: 1
    &-cover
        position: relative
    &-ovl
        fullscreen(2)
        transition: all .3s ease-out
        background: rgba(0, 0, 0, .5)
    &-info
        text-align: left
        padding-left: 5px
        padding-right: 5px
    &-tit
        font-size: 22px
    &-btn
        min-width: 100%
    a
        transition: color .2s ease-out
        &:hover
            .post-desc
                color: $color-link