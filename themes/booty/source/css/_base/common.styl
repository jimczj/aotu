.clr {
    clear: both;
    padding: 0;
    height: 0;
    margin: 0;
}
.v-center{
    position:relative;
    top:50%;
    transform:translateY(-50%);
}
.h-center{
    position:relative;
    left:50%;
    transform:translateX(-50%);
}

.fullscreen
    .background
        fullscreen(0)

.ani
    visibility: hidden

.btn
    display: inline-block
    margin-bottom: 0
    text-align: center
    vertical-align: middle
    -ms-touch-action: manipulation
    touch-action: manipulation
    cursor: pointer
    background-image: none
    border: 1px solid transparent
    white-space: nowrap
    line-height: 1.428571429
    user-select: none
    height: 45px
    font-size: 14px
    font-weight: 400
    text-transform: uppercase
    padding: 11px 10px
    border-radius: 0
    text-decoration: none
    transition: all .3s ease-in-out
    &:focus,
    &.focus,
    &:active:focus,
    &:active.focus,
    &.active:focus,
    &.active.focus
        outline: thin dotted
        outline: 5px auto -webkit-focus-ring-color;
        outline-offset: -2px
    &:hover,
    &:focus,
    &.focus
        color: $color-btn-text-active
        text-decoration: none
    &:active,
    &.active
        outline: 0
        background-image: none
        box-shadow: inset 0 3px 5px rgba(0, 0, 0, .125)
    &-whiteline
        border: 1px solid $color-btn-text
        color: $color-btn-text
        background: 0 0
        transition: all .3s ease-in-out
        &:hover
            color: $color-btn-text
            background: $color-btn-bg-lite
            border: 1px solid $color-btn-bg-lite
    &-black
        background: $color-btn-bg
        color: $color-btn-text
        border: 1px solid $color-btn-bg
        transition: all .3s ease-in-out
        &:hover
            border: 1px solid $color-btn-bg
            color: $color-btn-bg
            background: 0 0
    &-greyline
        border: 1px solid $color-btn-bg
        color: $color-btn-bg
        position: relative
        transition: all .3s ease-in-out
        &:hover
            border: 1px solid $color-btn-bg-lite
            color: $color-btn-text
            background-color: $color-btn-bg-lite

.grid
    &-col
        float: left
    &-2cols
        clearfix()
        .grid-col
            width: 50%
            &:nth-child(1)
              padding-right: 0.5em
            &:nth-child(2)
              padding-left: 0.5em

.blockquote-em
    position: relative
    font-size: 20px
    display: inline-block
    padding: 10px 40px
    line-height: 30px
    color: $color-default
    border-left: none
    &:before, &:after
        position: absolute
        width: 30px
        height: 30px
        font-size: 60px
        line-height: 1
        color: $color-bd
    &:before
        top: 0
        left: 0
        content: "\201C"
    &:after
        top: 0
        right: 0
        content: "\201D"
