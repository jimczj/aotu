html
    font-size: 16px
    &.ovf-hidden
        overflow: hidden
        body
            overflow: hidden
body
    font-family: 'Lato', Calibri, Arial, sans-serif
    background-color: $color-bg
    font-weight: 300
    font-size: 15px
    -webkit-font-smoothing: antialiased   

    background-size: 100% 100%
    background-repeat: repeat
a
    color: $color-link
    text-decoration: none
    &:hover, &:focus
        text-decoration: none
        color: $color-accent

p,h1,h2,h3
    margin: auto
ul
    padding: 0
    li
        list-style: none

.head {
    width: 100%;
    height: 60px;
    background-color: #000;
    position: relative;

    .logo {
      display: inline-block;
      width: 40%;
      max-width: 186px;
      height: 100%;
      margin-left: 15px;
      background: url('../img/top_logo.png') no-repeat;
      background-position: center;
      background-size: 100% auto;
    }

    a {
      color: #fff;
      right: 15px;
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
    }
}

