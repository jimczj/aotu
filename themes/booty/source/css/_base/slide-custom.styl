.slideshow .sl-slider-wrapper {
    position: absolute;
    width: 100%;
    height: 100%;
    top: 0;
    left: 0;
}

/* Custom navigation arrows */

.nav-arrows span {
    position: absolute;
    z-index: 2000;
    top: 50%;
    width: 40px;
    height: 40px;
    overflow:hidden;
    border: 6px solid #ddd;
    border: 6px solid rgba(150,150,150,0.3);
    text-indent: -90000px;
    margin-top: -40px;
    cursor: pointer;
    
    -webkit-transform: rotate(45deg);
    -moz-transform: rotate(45deg);
    -o-transform: rotate(45deg);
    -ms-transform: rotate(45deg);
    transform: rotate(45deg);
}

.nav-arrows span:hover {
    border-color: rgba(150,150,150,0.5);
}

.nav-arrows span.nav-arrow-prev {
    left: 5%;
    border-right: none;
    border-top: none;
}

.nav-arrows span.nav-arrow-next {
    right: 5%;
    border-left: none;
    border-bottom: none;
}

.touch .nav-arrows {
    display:none;   
}

/* Custom navigation dots */

.nav-dots {
    text-align: center;
    position: absolute;
    bottom: 0;
    height: 2px;
    width: 100%;
    left: 0;
    z-index: 1000;
    display: -webkit-box; 
    display: -moz-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -webkit-box-orient:horizontal;/* fix bugs on MiuiBrowser 1.0 || AppleWebkit 534.30 */
}

.nav-dots span {
    flex:1;
    -webkit-box-flex:1;
    -moz-box-flex:1;
    -ms-box-flex:1;
    box-flex:1;
    
    
    position: relative;
    height: 2px;
    background: #ddd;
    background: rgba(150,150,150,0.4);
    width:100%;/* we need this fix bugs on mobile browsers */
    cursor: pointer;
    box-shadow: 
        0 1px 1px rgba(255,255,255,0.4), 
        inset 0 1px 1px rgba(0,0,0,0.1);
}

.nav-dots span.nav-dot-current {
    background: rgba(255,255,255,0.8);
    box-shadow:none;
}

/* Content elements */
.c-flex{
    display: flex;
    /* Then we define the flow direction and if we allow the items to wrap 
    * Remember this is the same as:
    * flex-direction: row;
    * flex-wrap: wrap;
    */
    flex-flow: row wrap;

    /* Then we define how is distributed the remaining space */
    justify-content: center;

    align-items:center;

    /* fix bugs on MiuiBrowser 1.0 || AppleWebkit 534.30 */
    -webkit-box-orient:horizontal; /* rel to flex-direction  */
    -webkit-box-lines:multiple;  /* rel to flex-wrap */
    -webkit-box-align:center;    /* rel to align-items */
    -webkit-box-pack:center;     /* rel to justity-content  */

}
.album{
    position:absolute;
    z-index:11;
    top:0;
    left:0;
    height:100%;
    width:100%;
}
.album-hd{
    font-size:26px;
    font-weight:normal;
    text-align:center;
    height:50px;
    line-height:50px;
    color:#fff;
    text-transform:uppercase;
    display: none;
}
.album-bd{
    position:absolute;
    z-index:11;
    top: 10%;
    left:0;
    width:100%;
    background:#eee;
    height: 80%;
}
.album-grid{
    height:16.6666666666%;
    width:100%;
    padding:5px 10px;
    position:relative;
    overflow:hidden;
}
.album-grid-bd:before,
.album-grid-bd:after {
    content: "\20";
    display: table;
}

.album-grid-bd:after {
    clear: both;
}
.album-grid:nth-child(odd){
    background:#fff;
}
.album-grid:nth-child(even){
    background:#eee;
}
.album-grid-bd{
    position:relative;
    width:100%;
    height:100%;
    margin:0 auto;
}
.album-item{  
    text-align:center;
    position:relative;
    height:100%;
    max-height:100%;
}
.album-tit{
    position:absolute;
    right:5px;
    bottom:0;
    height:100%;
}
.album-tit-bd{
    color: #333;
    border-color: #000;
    font-size:1.2em;
    font-weight:400;
    text-align:right;
    padding:0.1em 0.2em;
    text-transform:uppercase;
    margin-top: 0;
}
.album-tit-bd em{
    font-style:normal;
    color:red;
}
.album-author{
    font-size:smaller;    
    display:block;
    margin-bottom: 5px;
}
.album-img{
    vertical-align:top;
    display:block;
    width:auto;
    height:100%;
    opacity: 0.5;
    transition: all 0.35s;
    border-radius:50%;
    max-width: 160px;
    max-height: 160px;
}
.album-grid:hover .album-img,.album-grid:active .album-img {
    opacity: 1;
}
.slideshow .deco {
    width: 260px;
    height: 260px;
    border: 2px dashed #ddd;
    border: 2px dashed rgba(150,150,150,0.4);
    border-radius: 50%;
    position: absolute;
    bottom: 50%;
    left: 50%;
    margin: 0 0 0 -130px;
    line-height: 260px;
    text-align: center;
    text-transform: uppercase;
    font-size: 2.1em;
    font-weight: normal;
    color: #fff;
    text-shadow: 0px 0px 2px #666;
}

.slideshow .deco img{
    position:absolute;
    width:210px;
    height:210px;
    border-radius:50%;
    top:50%;
    left:50%;
    margin:-105px 0 0 -105px;
}

.slideshow [data-icon]:after {
    content: attr(data-icon);
    font-family: 'AnimalsNormal';
    color: #999;
    text-shadow: 0 0 1px #999;
    position: absolute;
    width: 220px;
    height: 220px;
    line-height: 220px;
    text-align: center;
    font-size: 100px;
    top: 50%;
    left: 50%;
    margin: -110px 0 0 -110px;
    box-shadow: inset 0 0 0 10px #f7f7f7;
    border-radius: 50%;
}

.slideshow [data-ficon]:after {
    content: attr(data-ficon);
    font-family:'fontello';
    color: #999;
    text-shadow: 0 0 1px #999;
    position: absolute;
    width: 220px;
    height: 220px;
    line-height: 220px;
    text-align: center;
    font-size: 100px;
    top: 50%;
    left: 50%;
    margin: -110px 0 0 -110px;
    box-shadow: inset 0 0 0 10px #f7f7f7;
    border-radius: 50%;
}

.slideshow .sl-slide h2 {
    color: #000;
    text-shadow: 0 0 1px #000;
    padding: 20px;
    position: absolute;
    font-size: 34px;
    font-weight: 500;
    letter-spacing: 12px;
    text-transform: uppercase;
    width: 80%;
    left: 10%;
    text-align: center;
    line-height: 50px;
    bottom: 50%;
    margin: 0 0 -120px 0;
}

.slideshow .sl-slide blockquote {
    position: absolute;
    width: 100%;
    text-align: center;
    left: 0;
    font-weight: 400;
    font-size: 16px;
    line-height: 20px;
    height: 70px;
    color: #8b8b8b;
    z-index: 2;
    bottom: 50%;
    margin: 0 0 -200px 0;
    padding: 0;
}

.slideshow .sl-slide blockquote p,.slideshow .sl-slide blockquote .quote-inner{
    margin: 0 auto;
    width: 65%;
    max-width: 400px;
    position: relative;
    text-align:left;
}

.slideshow .sl-slide blockquote p:before ,.slideshow .sl-slide blockquote p:after {
    color: #f0f0f0;
    color: rgba(244,244,244,0.4);
    font-family: "Bookman Old Style", Bookman, Garamond, serif;
    position: absolute;
    line-height: 60px;
    width: 75px;
    height: 75px;
    font-size: 200px;
    z-index: -1;
    left: -90px;
    top: 35px;
    content: '\201C';
}

.bg-light blockquote p:before,.bg-light blockquote p:after{
    color:rgba(244,244,244,0.8) !important;
}

.slideshow .sl-slide blockquote p:after{
    left:auto;
    right:-85px;
    top:-70px;
    -webkit-transform:rotate(180deg);
    transform:rotate(180deg);
} 

.slideshow .sl-slide blockquote cite {
    font-size: 12px;
    padding-top: 10px;
    display: inline-block;
    font-style: normal;
    text-transform: uppercase;
    letter-spacing: 4px;
}

